---
import { motion } from 'framer-motion';
import { MyServices } from '../../../data/Services';
import TitleSection from '../../title-section.astro';
---

<article id="services">
  <TitleSection title="Servicios" />
  <div class="services-container grid grid-cols-1 sm:grid-cols-2 grid-rows-2 gap-4">
    {
      MyServices.map((x) => (
        <motion.div
          client:visible
          layout
          initial={{ backgroundImage: `linear-gradient(to bottom, transparent, ${x.color} )` }}
          whileInView={{ backgroundColor: x.color }}
          whileHover={{ boxShadow: `0 0 5px ${x.color}` }}
          transition={{ delay: 0.2 }}
          className="cursor-pointer"
        >
          <img class="icon_service" src={x.icon} alt={x.alt} />
          <h2 class="title_service">{x.title}</h2>

          <motion.p
            client:visible
            initial={{ opacity: 0 }}
            whileInView={{ opacity: 1 }}
            transition={{ delay: 0.2 }}
            className="opacity-60"
          >
            {x.description}
          </motion.p>
        </motion.div>
      ))
    }
  </div>
</article>

<style>
  .services-container div {
    padding: 10px 20px;
    border-radius: 10px;
    position: relative;
  }

  .icon_service {
    width: 80px;
    margin: 15px 0;
  }

  .title_service {
    font-size: 1.5rem;
  }

  .temp_service {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.11;
  }
</style>
