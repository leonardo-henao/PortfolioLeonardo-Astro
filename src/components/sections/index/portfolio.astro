---
import { motion } from "framer-motion";
import {
	AllAndroidProjects,
	AllWebProjects,
	AllTwitchProjects,
} from "../../../data/Projects";
import SwiperProjects from "../../swiper-projects.astro";
import TitleSection from "../../title-section.astro";
---

<article id="portfolio" aria-label="Sección de portafolio">
	<TitleSection title="Portafolio" />
	<div class="mx-auto">
		<motion.h3
			initial={{ opacity: 0 }}
			whileInView={{ opacity: 1 }}
			client:visible
			className="opacity-40 text-lg my-4 mx-auto pl-4 max-w-7xl"
			aria-label="Lista de sitios web y aplicaciones web"
			>Sitios y Aplicaciones WEB</motion.h3
		>
		<div>
			<SwiperProjects projects={AllWebProjects} />
		</div>

		<motion.h3
			initial={{ opacity: 0 }}
			whileInView={{ opacity: 1 }}
			client:visible
			className="opacity-40 text-lg mt-8 mb-4 mx-auto pl-4 max-w-7xl"
			aria-label="Lista de aplicaciones Android">Aplicaciones Android</motion.h3
		>
		<div>
			<SwiperProjects projects={AllAndroidProjects} />
		</div>

		<motion.h3
			initial={{ opacity: 0 }}
			whileInView={{ opacity: 1 }}
			client:visible
			className="opacity-40 text-lg mt-8 mb-4 mx-auto pl-4 max-w-7xl"
			aria-label="Lista de proyectos creados en vivo"
		>
			On-Air Projects
			<p class="opacity-40" aria-label="Descripción de los proyectos en vivo">
				Projectos creados en vivo en mi canal de Twitch
				<span class="block text-sm" aria-label="Información adicional">
					[Los projectos no se han adaptado a multiples pantallas]
				</span>
			</p>
		</motion.h3>
		<div>
			<SwiperProjects projects={AllTwitchProjects} />
		</div>
	</div>
</article>

<style is:global>
	swiper-container::part(bullet) {
		background-color: gray;
	}
	swiper-container::part(bullet-active) {
		background-color: rgb(var(--cl-green1));
	}
	swiper-container::part(button-next),
	swiper-container::part(button-prev) {
		color: rgb(var(--cl-green1));
		filter: drop-shadow(1px 1px 2px black);
	}
</style>

<script
	is:inline
	src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
></script>
