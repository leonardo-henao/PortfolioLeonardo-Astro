---
import { motion } from "framer-motion";
import { type IPortfolioProject } from "../interfaces/IPortfolioProject";

interface Props {
	project: IPortfolioProject;
}

const { project } = Astro.props;
const { name, image, imageBackground, description, toolsUsed, link } = project;
---

<swiper-slide class="portfolio_item" aria-label={`Proyecto: ${name}`}>
	<img
		loading="lazy"
		class="portfolio_item-background"
		src={imageBackground}
		alt={`Imagen de fondo de decoración para la aplicación ${name}`}
	/>

	<div class="portfolio_item-content" aria-label="Información del proyecto">
		<span
			class="portfolio_item-content-title text-2xl lg:text-4xl"
			aria-label={name}
		>
			{name}
		</span>

		<div
			class="flex flex-nowrap flex-col md:flex-row items-center justify-center"
			aria-label="Imagen y descripción del proyecto"
		>
			<figure
				class="w-[60%] h-[250px] lg:h-[300px] lg:w-[35%] flex justify-center"
				aria-label={`Imagen del proyecto ${name}`}
			>
				<img
					loading="lazy"
					src={image}
					alt=`Imagen de la aplicación de ${name }`
				/>
			</figure>
			<div
				class="portfolio_item-content-data no-scrollbar w-[80%] lg:w-[70%] h-[240px] lg:h-[260px] flex items-center justify-center overflow-y-auto m-4 px-4"
				aria-label={`Descripción del proyecto ${name}`}
			>
				<motion.p
					client:visible
					initial={{ opacity: 0 }}
					whileInView={{ opacity: 1 }}
					transition={{ delay: 0.2 }}
					className="text-gray-300 md:text-lg lg:text-2xl"
					>{description}</motion.p
				>
			</div>
		</div>
		<ul
			class="portfolio_item-content-data-skills"
			aria-label={`Tecnologías utilizadas en ${name}`}
		>
			{
				toolsUsed.map((x) => (
					<motion.li
						client:visible
						initial={{ translateY: 100, opacity: 0 }}
						whileInView={{ translateY: 0, opacity: 1 }}
						className="text-sm lg:text-base"
					>
						{x}
					</motion.li>
				))
			}
		</ul>
		<a
			class="portfolio_item-content-button"
			href={link}
			target="_blank"
			aria-label={`Enlace al proyecto ${name}`}
		>
			Visitar
		</a>
	</div>
</swiper-slide>

<style>
	.portfolio_item {
		position: relative;
	}

	.portfolio_item-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
		filter: blur(15px);
	}

	.portfolio_item-content {
		position: relative;
		z-index: 10;
		padding: 0.1rem;
		border-radius: 10px;

		align-items: center;
	}

	.portfolio_item-content::after {
		content: "";

		position: absolute;
		border-radius: 10px;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		background-color: var(--cl-black-02);
		opacity: 0.6;
		filter: blur(2px);
	}

	.portfolio_item-content-title {
		display: block;
		font-family: "Kanit", sans-serif;
		text-align: center;
		margin: 0.5rem 0;
	}

	.portfolio_item-content figure {
		overflow: hidden;
		border-radius: 10px;
		max-width: 200px;
	}

	.portfolio_item-content figure img {
		border-radius: 10px;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.portfolio_item-content-data-skills {
		margin-top: 0.5rem;
		display: flex;
		flex-wrap: wrap;
		margin-inline: auto;
		justify-content: center;
		align-items: center;
		gap: 0.2rem;
	}

	.portfolio_item-content-data-skills li {
		display: flex;
		padding: 0.2rem 0.4rem;
		border-radius: 0.2rem;
		background-color: rgb(var(--cl-black));
		color: rgb(var(--cl-green1));
	}

	.portfolio_item-content-button {
		position: relative;
		text-transform: uppercase;
		display: block;
		width: fit-content;
		margin: 0.2rem 0 2rem auto;
		padding: 10px 15px;
		z-index: 5;

		letter-spacing: 0.2rem;
		color: white;
		background-color: rgb(var(--cl-black));
		border-radius: 4px;
	}

	.portfolio_item-content-button::after {
		content: "";

		position: absolute;
		border-radius: 4px;
		top: 0;
		left: 0;
		width: 0%;
		height: 100%;
		z-index: -1;

		background-color: rgb(var(--cl-green1));
		transition: all 0.4s ease-in-out;
	}

	.portfolio_item-content-button:hover::after {
		width: 100%;
		box-shadow: 0px 0px 8px rgb(var(--cl-green1));
	}
</style>
