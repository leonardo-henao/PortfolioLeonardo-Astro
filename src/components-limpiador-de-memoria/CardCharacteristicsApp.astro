---
import LottieAnimation from 'astro-integration-lottie/Lottie.astro';
import { motion } from 'framer-motion';

const { lottieAnim, titleCard, textCard } = Astro.props;
---

<div class="card-characteristics">
  <motion.div className="min-h-4" initial={{ opacity: 0 }} whileInView={{ opacity: 1 }} client:visible>
    <LottieAnimation src={lottieAnim} player="light" autoplay="visible" loop={true} />
  </motion.div>
  <div>
    <h3 class="font-bold text-center text-lg mb-2 overflow-ellipsis line-clamp-1">
      {titleCard}
    </h3>
    <motion.p
      initial={{ opacity: 0 }}
      whileInView={{ opacity: 1 }}
      transition={{ delay: 0.2 }}
      client:visible
      className="opacity-80 p-2">{textCard}</motion.p
    >
  </div>
</div>
